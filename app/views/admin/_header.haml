- def isNot(controller)
	-	unless params[:controller] == controller or params[:controller] == "admin"
		-return "dimmed"
%hgroup
	.one_column{class: isNot("pages")}
		%h1= link_to "Pages", pages_path
		= link_to "New", new_page_path
		= link_to "View all", pages_path
	.one_column{class: isNot("portfolio")}
		%h1 Portfolio
		= link_to "New", new_portfolio_path
		= link_to "View all" , "/portfolio"
	.one_column{class: isNot("articles")}
