= render "admin/header"
.one_column
	%ul
		- @pages.each do |page|
			%li
				%h2= link_to page.name, page
				= link_to "Edit", edit_page_path(page)
				= link_to "Delete", "/pages/#{page.name}/delete"
				%p= truncate(page.body, length: 40)
				- unless page.body
					%p= page.description
.one_column
	%ul
		- @portfolio.each do |item|
			%li
				%h2= link_to item.title, portfolio_item_path(item)
				= link_to "Edit", edit_portfolio_item_path(item)
				= link_to "Delete", "/portfolio/#{item.slug}/delete"
				%p= truncate(item.body, length: 40)
.one_column
	%ul
		- @articles.each do |article|
			%li
				%h2= article.title
				= link_to "Edit", edit_article_path(article)
				= link_to "Delete", article_path(article), confirm: "Sure you want to delete #{article.title} ?", method: :delete
				%p= truncate(article.content, length: 40)
