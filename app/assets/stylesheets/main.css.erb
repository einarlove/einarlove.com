
/* ------------- */
/*   Universal   */
/* ------------- */

@font-face{
	font-family: "Pill Gothic 300mg";
	src: url('<%= font_path "pillgothic300mg-regular.ttf" %>') format('truetype');
	font-weight: normal;
	font-style: normal;
}
@font-face{
	font-family: "Pill Gothic 300mg";
	src: url('<%= font_path "pillgothic300mg-bold.ttf" %>') format('truetype');
	font-weight: bold;
	font-style: normal;
}
@font-face{
	font-family: "Pill Gothic 300mg";
	src: url('<%= font_path "pillgothic300mg-oblique.ttf" %>') format('truetype');
	font-weight: normal;
	font-style: italic;
}

body{
	font: 14px/1.5em "Trebuchet MS", Futura sans-serif normal;
	-webkit-font-smoothing: antialiased;
}

h1,h2,h3,h4, header nav, footer{
	font-family: "Pill Gothic 300mg", sans-serif;
	font-weight: bold;
	text-transform: uppercase;
	border-color:#e0e0e0;
}
header, section, footer{
	width:900px;
	margin: 0 auto;
}
a{
	color: black;
	text-decoration: none;
}
/* ------------- */
/*   Header      */
/* ------------- */

header{
	position: relative;
	height: 150px;
}
header hgroup a{
	font: 0/0 a;
	background-image: url("emblem.png");
	height: 34px;
	width: 130px;
	position: absolute;
	top: 56px;
}
header nav{
	position: absolute;
	right: 0;
	top: 65px;
}
header nav li {
	display:inline;
	margin-left:45px;
	font-size: 12px;
	font-weight:normal;
}
header nav a{
	padding: 7px 0;
	border-color: gray;
}
header nav .current_page, header nav a:hover{
-webkit-transition: border-color .4s ease-out;
	 -moz-transition: border-color .4s ease-out;
		-ms-transition: border-color .4s ease-out;
		 -o-transition: border-color .4s ease-out;
				transition: border-color .4s ease-out;
	border-bottom: 3px black solid;
}
/* ------------- */
/*   Section     */
/* ------------- */

section{
	overflow: auto;
	position:relative;
}
.one_column{
	width:290px;
	float:left;
}
.two_columns{
	width: 595px;
	float:left;
}
.two_columns + .one_column, .one_column + .two_columns, .one_column + .one_column{
	margin-left:15px;
}
section > h1,article > h1{
	color: #3f3f3f;
	font-size: 18px;
	border-top: #e0e0e0 1px solid;
	border-bottom: #e0e0e0 1px solid;
	padding: 30px 0 26px 0;
	margin-bottom: 1em;
}
article p{
	margin-top: 1em;
	color: #333;
}
article p a{
	border-bottom: 2px solid #555;
}
article p a:hover{
	border-bottom: 3px solid #000;
}

/* ------------ */
/*   Portfolio  */
/* ------------ */

article h2{
	margin: 20px 0 0;
	color: #3f3f3f;	
}
article li, article li a {
	font: 14px/1.5em "Trebuchet MS", Futura sans-serif normal;
	font-size: 12px;
	color: #3f3f3f;
	list-style: none;
}
.portfolio_item .portfolio_items{
	float: left;
	padding-top: 40px;
	margin-top: 40px;
	width:100%;
	border-top: #e0e0e0 1px solid;
}
.portfolio_items li{
	float:left;
	margin: 0 15px 15px 0;
	background: black;
	font: 0/0 a; /* Firefox */
}
.portfolio_items li a{
	font: 0/0 a;
}
.current_item img, .portfolio_items li a:hover img{
	opacity: 0.6;
}
.portfolio_items li:nth-of-type(3n+3){
	margin-right:0;
}
/* ------------ */
/*   Footer     */
/* ------------ */

footer{
	border-top: #e0e0e0 1px solid;
	padding:15px 0;
	margin:50px auto;
	font-size: 9px;
	letter-spacing:0.15em;
}
footer       div{float:left}
footer div + div{float:right}
footer span{
	font-weight: normal;
}

/* ------------ */
/*   Extra      */
/* ------------ */

::-moz-selection, ::selection {
	background:black;
	color: white;
}
th{
	font-family: "Pill Gothic 300mg", sans-serif;
	font-weight: bold;
	text-transform: uppercase;
	border-color:#e0e0e0;
	padding-right: 15px;
}
td{
	font-size: 12px;
	padding: 7px 10px 2px 0;
}


/* ---------- */
/*   Login    */
/* ---------- */

label {
	font-style: italic;
	color: #6c6c6c;
	margin:10px 0 3px 0
}
label:after{
	content: ':';
}
input[type="text"], input[type="password"]{
	width:100%;
	border: solid 1px #e0e0e0;
	padding: 6px;
	font-weight: bold;
}
input[type="submit"]{
	margin-top:20px;
	border:0;
	background: #e0e0e0;
	font-size:14px;
	padding: 10px 10px 8px;
	letter-spacing: 0.08em;
}
input[type="submit"]:hover{
	background:#585858;
	color: #e0e0e0;
	cursor: pointer;
}
.notice{
	margin-top:15px;
	text-align:center;
	color: brown;
}
