/* ---------- */
/*   video    */
/* ---------- */
.video_container{
  position:relative;
}

.video_container video{
  width:100%;
  opacity:0.5;
}

.video_controller{
  position:absolute;
  top:50%;
  left:50%;
  background-color:#222;
  background-position:center;
  width:100px;
  height:50px;
  margin-left:-50px;
  margin-top:-25px;
  border-radius:5px;
  opacity:1;
  cursor:pointer;
  -webkit-transition:opacity .2s;
  -moz-transition:opacity .2s;
  -ms-transition:opacity .2s;
  -o-transition:opacity .2s;
  transition:opacity .2s;
}

.video_container:hover .video_controller{
  background-color:black;
  -webkit-transition:background-color .2s;
  -moz-transition:background-color .2s;
  -ms-transition:background-color .2s;
  -o-transition:background-color .2s;
  transition:background-color .2s;
}

.playing .video_container{
  width:900px;
  margin:0;
  position:absolute;
  right:0;
  top:0;
  -webkit-transition:width 1s ease-in-out;
  -moz-transition:width 1s ease-in-out;
  -ms-transition:width 1s ease-in-out;
  -o-transition:width 1s ease-in-out;
  transition:width 1s ease-in-out;
}

.playing .portfolio_items{
  visibility:hidden;
}

.playing .video_controller,.time_bar{
  opacity:0;
}

.playing video,.playing .video_container:hover .time_bar{
  opacity:1;
}

.video_controller:after{
  content:"";
  height:26px;
  width:24px;
  position:absolute;
  top:13px;
  left:40px;
  background:url('<%= image_path("video_controller.png") %>');
}

.video_container .progress_bar{
  background:white;
  height:10px;
  width:100%;
}

.video_container .time_bar{
  background:#999;
  height:1px;
  width:0;
  -webkit-transition:1s;
  -moz-transition:1s;
  -ms-transition:1s;
  -o-transition:1s;
  transition:1s;
}

.video_container .progress_bar:hover .time_bar{
  height:50%;
  background:black;
}

.buffering .video_controller{
  opacity:1;
  background:url("<%= image_path('buffer.gif')%>") no-repeat center black;
  margin-top:-20px;
  margin-left:-30px;
  height:40px;
  width:60px;
  -webkit-transition:1s;
  -moz-transition:1s;
  -ms-transition:1s;
  -o-transition:1s;
  transition:1s;
}

.buffering .video_controller:after{
  display:none;
}

/* ---------- */
/*   admin    */
/* ---------- */
.admin_area{
  margin-bottom:80px;
}

.admin_area hgroup{
  height:35px;
  padding-top:5px;
  border-bottom:solid 1px #e0e0e0;
}

.admin_area h1{
  text-transform:none;
  font-size:30px;
  display:inline;
  padding-right:6px;
}

.admin_area hgroup > a,input[type="submit"]{
  color:#585858;
  letter-spacing:.01em;
}

.admin_area h1 + a:after,.admin_area h2 + a:after{
  content:'-';
  margin:0 2px 0 7px;
}

.admin_area li h2{
  font-size:18px;
  text-transform:capitalize;
}

.admin_area li > a{
  font-style:italic;
  color:#585858;
}

.admin_area li p{
  color:#585858;
}

.admin_area li{
  border-bottom:solid 1px #e0e0e0;
  padding:20px 0;
  min-height:63px;
}

.dimmed{
  opacity:.5;
}
.dimmed:hover{
  opacity:1;
}

textarea{
  border:solid 1px #e0e0e0;
  font-size:14px;
  min-height:8em;
  width:100%;
  padding:15px;
  resize:none;
  font-family:inherit;
/* Firefox */
}

textarea:focus{
  resize:vertical;
}

label,input,textarea{
  display:inline-block;
}

.login{
  margin-left:305px;
  margin-top:150px;
}

.login > h1{
  display:block;
  padding:0 0 13px;
  border-bottom:solid 1px #e0e0e0;
  margin-bottom:13px;
}